<%= form_for(@feed) do |f| %>
  <% if @feed.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@feed.errors.count, "error") %> prohibited this feed from being saved:</h2>

      <ul>
      <% @feed.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>


<div class="row left">
  <div class="small-12 columns">
    <%= f.label "Feed Title", class: "bold" %><br>
    <%= f.text_field :title, :size=>"50", class: "radius" %>
  </div>
</div>


<div class="row left">
  <div class="small-12 columns">
    <%= f.label "Main URL of site", class: "bold" %><br>
    <%= f.text_field :site, class: "radius" %>
  </div>
</div>

<div class="row left">
  <div class="small-12 columns">
    <%= f.label "Feed URL", class: "bold" %><br>
    <%= f.text_field :url, class: "radius" %>
  </div>
</div>
 

<div class="row left">
  <div class="small-12 columns"> 

  <%= f.submit class: 'button tiny radius' %>



<% end %>

